CREATE TEMP TABLE draymond_green_emojis AS
SELECT 
(SELECT count(tweet_text) FROM draymond_green_tweets WHERE tweet_text LIKE '%üêê%') AS goat, 
(SELECT count(tweet_text) FROM draymond_green_tweets WHERE tweet_text LIKE '%üëë%') AS crown,
(SELECT count(tweet_text) FROM draymond_green_tweets WHERE tweet_text LIKE '%üî•%') AS fire,
(SELECT count(tweet_text) FROM draymond_green_tweets WHERE tweet_text LIKE '%üòÇ%') AS laughing,
(SELECT count(tweet_text) FROM draymond_green_tweets WHERE tweet_text LIKE '%üëÄ%') AS eyes, 
(SELECT count(tweet_text) FROM draymond_green_tweets WHERE tweet_text LIKE '%üôÑ%') AS rolling_eyes
;

