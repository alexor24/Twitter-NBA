-- 10. Player Names by Emoji

CREATE TEMP TABLE lebron_james_tweets AS
SELECT tweet_text
FROM tweets
WHERE tweet_text LIKE '%james%' OR tweet_text LIKE '%lebron%'
OR tweet_text LIKE '%James%' OR tweet_text LIKE '%Lebron%';

CREATE TEMP TABLE lebron_james_emojis AS
SELECT 
(SELECT count(tweet_text) FROM lebron_james_tweets WHERE tweet_text LIKE '%üêê%') AS goat, 
(SELECT count(tweet_text) FROM lebron_james_tweets WHERE tweet_text LIKE '%üëë%') AS crown,
(SELECT count(tweet_text) FROM lebron_james_tweets WHERE tweet_text LIKE '%üî•%') AS fire,
(SELECT count(tweet_text) FROM lebron_james_tweets WHERE tweet_text LIKE '%üòÇ%') AS laughing,
(SELECT count(tweet_text) FROM lebron_james_tweets WHERE tweet_text LIKE '%üëÄ%') AS eyes, 
(SELECT count(tweet_text) FROM lebron_james_tweets WHERE tweet_text LIKE '%üôÑ%') AS rolling_eyes
;

ALTER TABLE lebron_james_emojis 
ADD COLUMN player text;

UPDATE lebron_james_emojis
SET player='Lebron James';

